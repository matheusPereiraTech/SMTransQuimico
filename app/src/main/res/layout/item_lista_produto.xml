<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">

            <TextView
                android:id="@+id/textoCorrelacaoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="40sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <ImageView
                android:id="@+id/imgAtualizarLista"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:src="@drawable/atualizar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtlistaNumeroOnuTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número ONU: "
                android:textSize="15dp"
                />


            <TextView
                android:id="@+id/txtlistaNumeroOnu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtlistaNomeDescricaoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome e Descrição: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtlistaNomeDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtlistaClasseSubclasseRiscoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classe ou Subclasse de Risco: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtlistaClasseSubclasseRisco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtlistaRiscoSubdiarioTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risco Subsi-diário: "
            android:textSize="15dp" />
        <TextView
            android:id="@+id/txtlistaRiscoSubdiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtlistatNumeroRiscoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Risco: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtlistatNumeroRisco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtlistaGrupoEmbTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo de Emb: "
            android:textSize="15dp" />


        <TextView
            android:id="@+id/txtlistaGrupoEmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtlistaProvisoesEspeciaisTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provisões Especiais: "
            android:textSize="15dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/txtlistaProvisoesEspeciais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp" />
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>